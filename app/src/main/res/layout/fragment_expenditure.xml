<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/expenditure_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:minHeight="100sp"
    card_view:cardElevation="5dp"
    card_view:cardCornerRadius="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        >

        <TextView
            android:textAlignment="center"
            android:id="@+id/text_view_expense_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/text_view_expense_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_below="@+id/text_view_expense_description"
            />

        <TextView
            android:id="@+id/text_view_expense_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_below="@+id/text_view_expense_amount"
            />

        <TextView
            android:id="@+id/text_view_expense_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_below="@+id/text_view_expense_date"
            />

        <TextView
            android:id="@+id/text_view_expense_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_below="@+id/text_view_expense_category"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>


